<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_04_GUI_Csharpp.guiAttuatore1"
             Title="guiAttuatore1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button
            Text="Aumenta velocità di 10"
            Clicked="Inc10"
            Grid.Row="0"
            Grid.Column="0"/>
        <Button
            Text="Diminuisci velocità di 10"
            Clicked="Dec10"
            Grid.Row="0"
            Grid.Column="1"/>
        <Button
            Text="Avanti"
            Clicked="Avanti"
            Grid.Row="1"
            Grid.Column="0"/>
        <Button
            Text="Indietro"
            Clicked="Indietro"
            Grid.Row="1"
            Grid.Column="1"/>
        <Label
            x:Name="Velocità"
            Text="Velocità: 0"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            FontSize="30"/>
    </Grid>
</ContentPage>