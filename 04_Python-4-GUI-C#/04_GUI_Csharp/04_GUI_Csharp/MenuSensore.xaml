            Text="Soluzione 2"
            FontSize="20"
            Clicked="Soluzione2"
            TextColor="Black"
            VerticalOptions="Center"
            BorderColor="DarkGoldenrod"
            BackgroundColor="Yellow"
            BorderWidth="5"
            Padding="40"
            WidthRequest="200"
            Margin="10"/>
